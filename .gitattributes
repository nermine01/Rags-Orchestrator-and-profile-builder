*.mp4 filter=lfs diff=lfs merge=lfs -text
*.h5 filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
*.pdf filter=lfs diff=lfs merge=lfs -text
*.faiss filter=lfs diff=lfs merge=lfs -text
uploads/*.pdf filter=lfs diff=lfs merge=lfs -text
storage/*/*.faiss filter=lfs diff=lfs merge=lfs -text
# Normalize line endings (good for Windows/Linux mix)
* text=auto
# Python files always use LF
*.py text eol=lf
# Prevent binary files from being messed with
*.faiss binary
*.jsonl text
*.pdf binary
*.png binary
*.jpg binary
# Do not include local data in export (if you run `git archive`)
storage/* export-ignore
uploads/* export-ignore
.venv/ export-ignore
